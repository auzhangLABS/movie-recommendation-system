pipeline {
    agent {
                label 'awsDeploy3'
            }
    environment {
        AWS_EKS_REGION = 'us-east-1'
        AWS_EKS_CLUSTER_NAME = "finalv1"
    }

    stages {
        stage('applying to backend deployment/service to EKS') {
            agent {
                label 'awsDeploy3'
            }
            steps {
                script {
                    withCredentials([
                        string(credentialsId: 'AWS_ACCESS_KEY', variable: 'aws_access_key'),
                        string(credentialsId: 'AWS_SECRET_KEY', variable: 'aws_secret_key')
                    ]) { 
                        dir('k8'){

                        }
                        sh "aws eks --region $AWS_EKS_REGION update-kubeconfig --name $AWS_EKS_CLUSTER_NAME"
                        sh "kubectl apply -f deploymentbe.yaml"
                    }
                }
            }
        }
    }
}
